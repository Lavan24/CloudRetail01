@model Retail3.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h1>Delete Product</h1>
    <hr />

    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this product?</strong>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Product Name</dt>
        <dd class="col-sm-9">@Model.ProductName</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.Price.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</dd>

        <dt class="col-sm-3">Stock</dt>
        <dd class="col-sm-9">@Model.StockQuantity</dd>

        <dt class="col-sm-3">Image</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.productImageURL))
            {
                <img src="@Model.productImageURL" alt="@Model.ProductName"
                     class="img-thumbnail" style="max-width:150px;" />
            }
            else
            {
                <span class="text-muted">No Image</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RowKey" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
