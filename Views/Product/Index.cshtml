@model IEnumerable<Retail3.Models.Product>

@{
    ViewData["Title"] = "Product Inventory";
}

<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Product Inventory</h1>
        <a asp-action="Create" class="btn btn-success">Add New Product</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(product.productImageURL))
                                {
                                    <img src="@product.productImageURL" alt="@product.ProductName"
                                         class="img-thumbnail" style="max-width: 60px; max-height: 60px;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@product.ProductName</td>
                            <td>@product.Category</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>
                                <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                    @product.StockQuantity
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@product.RowKey" class="btn btn-primary btn-sm">Edit</a>
                                    <a asp-action="Details" asp-route-id="@product.RowKey" class="btn btn-info btn-sm">Details</a>
                                    <a asp-action="Delete" asp-route-id="@product.RowKey" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>No products found</h4>
            <p>Get started by adding your first product to the inventory.</p>
            <a asp-action="Create" class="btn btn-primary">Add First Product</a>
        </div>
    }
</div>

