@model Retail3.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">Delete Order</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this order?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Order ID</dt>
                        <dd class="col-sm-8">@Model.RowKey</dd>

                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Product</dt>
                        <dd class="col-sm-8">@Model.ProductName</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Price</dd>

                        <dt class="col-sm-4">Order Date</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</dd>

                        <dt class="col-sm-4">Total Amount</dt>
                        <dd class="col-sm-8">@Model.TotalAmount.ToString("C")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == "Completed" ? "bg-success" : "bg-warning")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <!-- Important: post to Delete, not DeleteConfirmed -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="RowKey" />
                        <!-- Removed PartitionKey since it's always "orders" -->
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Details" asp-route-id="@Model.RowKey" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
